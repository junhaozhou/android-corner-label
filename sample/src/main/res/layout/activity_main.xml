<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.littlechoc.cornerlabel.sample.MainActivity"
    >

    <com.littlechoc.cornerlabel.CornerLabel
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:tl_background="#4CAF50"
        app:tl_label="Label"
        app:tl_labelSize="14sp"
        />

    <com.littlechoc.cornerlabel.CornerLabel
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:tl_background="#3F51B5"
        app:tl_label="Label"
        app:tl_labelColor="#B3FFFFFF"
        app:tl_labelSize="14sp"
        app:tl_position="topRight"
        />

    <com.littlechoc.cornerlabel.CornerLabel
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tl_background="#2196F3"
        app:tl_label="Label"
        app:tl_labelSize="16sp"
        app:tl_position="bottomLeft"
        />

    <com.littlechoc.cornerlabel.CornerLabel
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:tl_background="#009688"
        app:tl_label="Label"
        app:tl_labelSize="18sp"
        app:tl_position="bottomRight"
        />

</RelativeLayout>
